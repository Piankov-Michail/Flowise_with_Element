# .env
# Основные настройки
SERVER_HOST=192.168.0.0  # IP-адрес сервера
SERVER_DOMAIN=matrix.local  # Или реальный домен, если есть

# Настройки Synapse
SYNAPSE_SERVER_NAME=${SERVER_DOMAIN}
SYNAPSE_PUBLIC_URL=http://${SERVER_HOST}:8008
SYNAPSE_INTERNAL_URL=http://synapse:8008

# Настройки Orchestrator
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=8001
ORCHESTRATOR_PUBLIC_URL=http://${SERVER_HOST}:8001

# База данных
DB_HOST=postgres
DB_NAME=orchestrator
DB_USER=orchestrator_user
DB_PASSWORD=orchestrator_pass

# Безопасность
ORCHESTRATOR_WEB_CLIENT_SECRET=your_strong_secret_here
ORCHESTRATOR_ADMIN_PASSWORD=your_strong_admin_password

# Регистрация пользователей
SYNAPSE_SHARED_SECRET=your_strong_shared_secret_here